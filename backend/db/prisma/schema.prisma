generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id String @id
  Username String @unique
  Name String @default("")
  Gender String @default("")
  Password String @default("")
  Email String @default("")
  Outpass Outpass[]
  Outing Outing[]
  OTP String @default("")
  PhoneNumber String @default("")
  FatherPhoneNumber String @default("")
  MotherPhoneNumber String @default("")
  Address String @default("")
  Year String @default("E2")
  Branch String @default("")
  Section String @default("")
  Roomno String @default("")
  isPresentInCampus Boolean @default(true)
  isApplicationPending Boolean @default(false)
}


model Admin{
  id String @id
  Username String @unique
  Password String
}


model Outpass {
  id String @id
  StudentId String
  Reason String
  FromDay DateTime @db.Date
  ToDay DateTime @db.Date
  Days Int @default(0)
  RequestedTime DateTime @db.Timestamp() @default(now())
  isExpired Boolean @default(false)
  isApproved Boolean @default(false)
  issuedBy String @default("none")
  issuedTime DateTime @db.Timestamp() @default(now()) 
  Message String
  isRejected Boolean @default(false)
  rejectedBy   String @default("none")
  rejectedTime DateTime @db.Timestamp() @default(now()) 
  inTime DateTime @db.Timestamp() @default(now())
  Student Student @relation(fields: [StudentId],references: [id])
}


model Outing{
  id String @id
  StudentId String
  reason String
  FromTime DateTime @db.Time
  ToTime DateTime @db.Time
  Hours Int @default(0)
  RequestedTime DateTime @db.Timestamp() @default(now())
  isExpired Boolean @default(false)
  isApproved Boolean @default(false)
  issuedBy String @default("none")
  issuedTime DateTime @db.Timestamp() @default(now()) 
  Message String @default("No message")
  isRejected Boolean @default(false)
  rejectedBy String @default("none")
  inTime DateTime @db.Time() @default(now())
  rejectedTime DateTime @db.Timestamp() @default(now()) 
  Student Student @relation(fields: [StudentId],references: [id])
}
